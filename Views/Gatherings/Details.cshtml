@model VictuzWeb.Models.Gathering

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Gathering</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Naam
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Beschrijving
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Maximaal aantal deelnemers
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaxUsers)
        </dd>
        <dt class="col-sm-2">
            Deadline
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeadlineDate)
        </dd>
        <dt class="col-sm-2">
            Begintijd
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BeginDateTime)
        </dd>
        <dt class="col-sm-2">
            Eindtijd
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDateTime)
        </dd>
        <dt class="col-sm-2">
            Aanmaakdatum
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>
</div>

@if (User.Identity.IsAuthenticated)
{
    @if (User.IsInRole("Admin"))
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Voornaam
                    </th>
                    <th>
                        Achternaam
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.RegisteredUsers)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Firstname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Surname)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}









<form asp-action="Join">
    <div class="form-group">
        <input type="hidden" asp-for="Identifier" />
        <input type="hidden" asp-for="Name" />
        <input type="hidden" asp-for="Description" />
        <input type="submit" value="Aanmelden" class="btn btn-primary" style="margin-top:5px"/>
    </div>
</form>

<div>

    @if (User.Identity.IsAuthenticated)
    {
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Edit" asp-route-id="@Model?.Identifier">Bewerken</a>
        }
    }


    <a asp-action="Index">Terug naar lijst</a>
</div>
